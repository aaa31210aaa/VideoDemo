<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:id="@+id/rootView"
    tools:context="ui.activity.Special5GNewsDetailActivity">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/news_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/video_dp10"
            android:paddingRight="@dimen/video_dp10">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:layout_centerInParent="true"
                android:src="@drawable/black_back"></ImageView>
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="视频详情"
            android:textColor="@color/video_black"
            android:textSize="18sp"></TextView>

        <RelativeLayout
            android:id="@+id/news_detail_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/video_dp20"
            android:paddingRight="@dimen/video_dp20">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="4dp"
                android:layout_centerInParent="true"
                android:src="@drawable/special5g_share_btn"></ImageView>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/news_detail_playview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar">

    </RelativeLayout>


    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableRefresh="false"
        android:layout_below="@+id/news_detail_playview">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/introduction_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5F5F5">

                    <RelativeLayout
                        android:id="@+id/video_collection_header_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/special_5g_news_detail_topbg"
                        android:padding="@dimen/video_dp10">

                        <TextView
                            android:id="@+id/news_detail_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/video_black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="长沙新闻"></TextView>

                        <TextView
                            android:id="@+id/introduction_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/news_detail_title"
                            android:layout_marginTop="8dp"
                            android:text=""
                            android:textColor="@color/video_c6"
                            tools:text=""></TextView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/text_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/video_collection_header_top"
                        android:layout_marginTop="@dimen/video_dp10"
                        android:background="@drawable/special_5g_news_detail_bottombg"
                        android:paddingLeft="@dimen/video_dp10"
                        android:paddingTop="@dimen/video_dp20"
                        android:paddingBottom="@dimen/video_dp20">

                        <ImageView
                            android:id="@+id/text_label"
                            android:layout_width="@dimen/video_dp5"
                            android:layout_height="@dimen/video_dp15"
                            android:layout_centerVertical="true"
                            android:background="@drawable/live_5g_red_label">

                        </ImageView>

                        <TextView
                            android:id="@+id/text_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/text_label"
                            android:textColor="@color/video_black"
                            android:textSize="@dimen/sp_14"
                            tools:text="新闻正片"></TextView>

                        <TextView
                            android:id="@+id/video_collection_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/video_dp10"
                            android:text=""
                            android:textColor="@color/video_black"
                            android:textSize="@dimen/sp_14"
                            android:visibility="gone"></TextView>
                    </RelativeLayout>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/collection_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/introduction_rl"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/video_dp10">

                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <com.scwang.smart.refresh.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.scwang.smart.refresh.footer.ClassicsFooter>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</RelativeLayout>