<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="82dp"
        android:layout_height="93dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/video_dp10"
        android:background="@drawable/radio_station_bg"
        android:gravity="center">

        <ImageView
            android:id="@+id/radio_station_item_img"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true">

        </ImageView>

        <TextView
            android:id="@+id/radio_station_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio_station_item_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/video_dp10"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/video_black"></TextView>
    </RelativeLayout>


</RelativeLayout>